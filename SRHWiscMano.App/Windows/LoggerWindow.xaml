<mah:MetroWindow x:Class="SRHWiscMano.App.Windows.LoggerWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:local="clr-namespace:SRHWiscMano.App.Windows"
                 mc:Ignorable="d"
                 Title="Logger Window" d:DesignWidth="400" d:DesignHeight="450" Closing="MetroWindow_Closing">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="LogTextBox" IsReadOnly="True" />
        </ScrollViewer>
    </Grid>
</mah:MetroWindow>
