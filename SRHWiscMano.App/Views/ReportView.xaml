<UserControl x:Class="SRHWiscMano.App.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SRHWiscMano.App.Views"
             xmlns:viewModels="clr-namespace:SRHWiscMano.App.ViewModels"
             xmlns:pt="http://propertytools.org/wpf"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200" Background="Ivory"
             d:DataContext="{d:DesignInstance viewModels:ReportViewModel, IsDesignTimeCreatable=True}">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding NavigatedFromCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <FlowDocumentScrollViewer x:Name="flowDocScrollViewer" Margin="0, 12, 0, 0">
            <FrameworkElement.Resources>
                <Style x:Key="ResultsHeading" TargetType="{x:Type Paragraph}">
                    <Setter Property="TextBlock.FontSize" Value="24" />
                    <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
                </Style>
                <Style x:Key="RegionHeading" TargetType="{x:Type Paragraph}">
                    <Setter Property="TextBlock.FontWeight" Value="Bold" />
                </Style>
                <Style x:Key="VerticalHeading" TargetType="{x:Type TableCell}">
                    <Setter Property="FontSize" Value="13" />
                </Style>
                <Style x:Key="RotatedHeaderText" TargetType="{x:Type TextBlock}">
                    <Setter Property="Padding" Value="2,0" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="TextAlignment" Value="Center" />
                    <!-- <Setter Property="Height" Value="20"/> -->
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <RotateTransform Angle="270" />
                        </Setter.Value>
                    </Setter>
                </Style>
            </FrameworkElement.Resources>
            <FlowDocumentScrollViewer.Document>
                <FlowDocument>
                    <Paragraph>
                        <Figure Width="500" Padding="5,0,5,0" HorizontalAnchor="PageRight">
                            <BlockUIContainer>
                                <oxy:PlotView Width="450" Height="200" Model="{Binding ModelPressureMax}"
                                              Controller="{Binding CntrPressureMax}" />
                            </BlockUIContainer>
                            <BlockUIContainer>
                                <oxy:PlotView Width="450" Height="200" Model="{Binding ModelPressureMaxAtVP}"
                                              Controller="{Binding CntrPressureMaxAtVP}" />
                            </BlockUIContainer>
                            <BlockUIContainer>
                                <oxy:PlotView Width="450" Height="200" Model="{Binding ModelPressureMaxAtTB}"
                                              Controller="{Binding CntrPressureMaxAtTB}" />
                            </BlockUIContainer>
                            <!-- <BlockUIContainer> -->
                            <!--     <oxy:PlotView Width="450" Height="200" Model="{Binding ModelPressureGradient}" -->
                            <!--                   Controller="{Binding CntrPressureGradient}" /> -->
                            <!-- </BlockUIContainer> -->
                        </Figure>
