<UserControl x:Class="SRHWiscMano.App.Views.ViewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SRHWiscMano.App.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:SRHWiscMano.Core.Converters;assembly=SRHWiscMano.Core"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=ViewerViewModel}">
    <UserControl.Resources>
        <converters:StringToDoubleConverter x:Key="StringToDoubleConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="180" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

            <!-- Zoom Out Button -->
            <Button Width="32"
                    Height="32 "
                    Margin="2"
                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                    Style="{StaticResource MahApps.Styles.Button.Circle}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:InvokeCommandAction Command="{Binding DoubleCommand}" CommandParameter="{Binding Source='-2.0', Converter={StaticResource StringToDoubleConverter}}">
                        </b:InvokeCommandAction>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <Button.ContentTemplate>
                    <DataTemplate>
                        <iconPacks:PackIconRemixIcon Kind="CloseLine" />
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Width="32"
                    Height="32 "
                    Margin="2"
                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                    Style="{StaticResource MahApps.Styles.Button.Circle}" Command="{Binding StringCommand}" CommandParameter="{Binding ZoomLevel}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <iconPacks:PackIconRemixIcon Kind="ZoomOutLine" />
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Width="32"
                    Height="32 "
                    Margin="2"
                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                    Style="{StaticResource MahApps.Styles.Button.Circle}" Command="{Binding ObjectCommand}"
                    CommandParameter="{Binding Text, ElementName=zoomlevel, Converter={StaticResource StringToDoubleConverter}}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <iconPacks:PackIconRemixIcon Kind="ZoomInLine" />
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <!-- Zoom Level Text Box -->
            <TextBox x:Name="zoomlevel" Text="{Binding ZoomPercentage, StringFormat='{}{0}'}" Width="50" Margin="5"
                     HorizontalAlignment="Center" VerticalContentAlignment="Center" />

            <!-- Snapshot Button -->
            <Button Width="32"
                    Height="32 "
                    Margin="2"
                    Foreground="{DynamicResource MahApps.Brushes.Accent}"
                    Style="{StaticResource MahApps.Styles.Button.Circle}" Command="{Binding StringCommand}" CommandParameter="-5.0">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <iconPacks:PackIconUnicons Kind="Capture" />
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>